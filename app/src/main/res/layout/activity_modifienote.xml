<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotesActivity"
    android:background="#7F1A6B2D">

  <include
      android:id="@+id/include_note"
      layout="@layout/appbar" />

  <Button
      android:id="@+id/modifie"
      android:layout_width="141dp"
      android:layout_height="55dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="40dp"
      android:text="Ajouter une note"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/include_note" />

  <TextView
      android:id="@+id/editTextTextPersonName"
      android:layout_width="156dp"
      android:layout_height="32dp"
      android:layout_marginTop="10dp"
      android:text="Name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.50"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/delete" />

  <EditText
      android:id="@+id/modificationName"
      android:layout_width="219dp"
      android:layout_height="71dp"
      android:layout_marginBottom="24dp"
      android:hint="Name"
      app:layout_constraintBottom_toTopOf="@+id/modificationDescription"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

  <EditText
      android:id="@+id/modificationDescription"
      android:layout_width="343dp"
      android:layout_height="420dp"
      android:layout_marginTop="100dp"
      android:ems="10"
      android:gravity="start|top"
      android:hint="Description"
      android:inputType="textMultiLine"
      android:text="Description"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

  <Button
      android:id="@+id/delete"
      android:layout_width="141dp"
      android:layout_height="55dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="40dp"
      android:hint="Supprimer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/include_note" />

</androidx.constraintlayout.widget.ConstraintLayout>