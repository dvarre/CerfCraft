<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/buttonCraft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNotes"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:drawableTop="@drawable/logo_notes"
        android:text="@string/notes_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCuisson"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/buttonMissions"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:drawableTop="@drawable/logo_missions"
        android:text="@string/missions_menu"
        app:layout_constraintStart_toEndOf="@+id/buttonCuisson"
        app:layout_constraintTop_toBottomOf="@+id/buttonMobs" />

    <Button
        android:id="@+id/buttonCraft"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:drawableTop="@drawable/logo_craft"
        android:text="@string/craft_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNotifs"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:drawableTop="@drawable/ic_settings"
        android:text="@string/notifs_menu"
        app:layout_constraintStart_toEndOf="@+id/buttonNotes"
        app:layout_constraintTop_toBottomOf="@+id/buttonMissions" />

    <Button
        android:id="@+id/buttonItems"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:drawableTop="@drawable/logo_item"
        android:text="@string/items_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCraft" />

    <Button
        android:id="@+id/buttonCuisson"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:drawableTop="@drawable/logo_cooking"
        android:text="@string/cuisson_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonItems" />

    <Button
        android:id="@+id/buttonMobs"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:drawableTop="@drawable/logo_mob"
        android:text="@string/mobs_menu"
        app:layout_constraintStart_toEndOf="@+id/buttonItems"
        app:layout_constraintTop_toBottomOf="@+id/buttonBiomes" />

    <Button
        android:id="@+id/buttonBiomes"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:drawableTop="@drawable/logo_biome"
        android:text="@string/biomes_menu"
        app:layout_constraintStart_toEndOf="@+id/buttonCraft"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:background="@android:drawable/ic_menu_sort_by_size"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>