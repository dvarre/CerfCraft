<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.cerfcraft">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>


    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CerfCraft"
        tools:targetApi="31">
        <activity
            android:name=".MobInfo"
            android:exported="false" />
        <activity
            android:name=".MissionInfo"
            android:exported="false" />
        <activity
            android:name=".ItemInfo"
            android:exported="false" />
        <activity
            android:name=".BiomeInfo"
            android:exported="false" />
        <activity
            android:name=".CraftItem"
            android:exported="false" />
        <activity
            android:name=".MissionsActivity"
            android:exported="false" />
        <activity
            android:name=".CuissonActivity"
            android:exported="false" />
        <activity
            android:name=".MobsActivity"
            android:exported="false" />
        <activity
            android:name=".ItemsActivity"
            android:exported="false" />
        <activity
            android:name=".BiomesActivity"
            android:exported="false" />
        <activity
            android:name=".CraftActivity"
            android:exported="false" />
        <activity
            android:name=".NotesActivity"
            android:exported="false" />
        <activity
            android:name=".NotifsActivity"
            android:exported="false" />
        <activity
            android:name=".WritingNotesActivity"
            android:exported="true"/>
        <activity
            android:name=".ShowingNotesActivity"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>